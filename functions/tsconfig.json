{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "transpileOnly": true,
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": [ "node" ],
    "typeRoots": [ "./node_modules/@types", "../node_modules/@types", "../../node_modules/@types" ]
  },
  "lib": ["es2015"],
  "compileOnSave": true,
  "include": [
    "src"
  ]
}