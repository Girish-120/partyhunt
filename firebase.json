{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "database": {
    "rules": "rules/database.rules.json"
  },
  "firestore": {
    "rules": "rules/firestore.rules",
    "indexes": "rules/firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "rules/storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080,
      "rules": "rules/firestore.rules"
    },
    "database": {
      "port": 9000,
      "rules": "rules/database.rules.json"
    },
    "storage": {
      "port": 9199,
      "rules": "rules/storage.rules"
    },
    "auth": {
      "port": 9099
    },
    "pubsub": {
      "port": 8085
    }
  },
  "remoteconfig": {
    "template": "rules/remoteconfig.template.json"
  },
  "extensions": {
    "firestore-send-email": "firebase/firestore-send-email@0.1.8",
    "firestore-counter": "firebase/firestore-counter@0.2.1"
  }
}
